{
    "name": "OSC AutoSender",
    "description": "Send emails automatically from OSC",
    "version": "1.3",
    "manifest_version": 2,
    "permissions":[
        "declarativeContent"
    ],
    "content_scripts":[
        {
            "matches": ["https://support-en.wd.com/*"],
            "css": ["inject/inject.css"],
            "js": ["inject/inject.js"]
        }
    ],
    "browser_action":{
        "default_icon":{
            "16": "icons/logo.png",
            "32": "icons/logo.png",
            "48": "icons/logo.png",
            "64": "icons/logo.png"
        }
    }
}